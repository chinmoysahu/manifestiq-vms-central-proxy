<div class="modal fade" id="modal-serverPairForm" tabindex="-1" role="dialog" aria-labelledby="modal-form" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-md" role="document">
    <div class="modal-content">
      <div class="modal-body p-0">
        <div class="card card-plain" id="password">
            <div class="card-header pb-0 text-left">
                <h3 class="font-weight-bolder text-primary text-gradient"><%- lang['Add Server'] %></h3>
            </div>
              <form role="form text-left">
                 <div class="card-body py-0">
                     <div class="form-group mb-3">
                         <label><%- lang['Shinobi Server IP'] %></label>
                         <input type="text" name="host" class="form-control" placeholder="<%- lang.Example %> : 10.1.12.200">
                     </div>
                     <div class="form-group mb-3">
                         <label><%- lang['P2P API Key'] %></label>
                         <input type="text" name="peerConnectKey" class="form-control" placeholder="<%- lang.Example %> : api_XXXXXXXXXXXXXXXXXX">
                     </div>
                     <div class="form-group mb-3">
                         <label><%- lang['Management Server IP'] %></label>
                         <input type="text" name="managementServer" class="form-control">
                     </div>
                 </div>
                 <div class="card-footer d-flex">
                     <div class="flex-grow-1">
                     </div>
                     <div>
                         <button class="btn bg-gradient-info btn-sm mb-0">Save</button>
                     </div>
                 </div>
              </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="libs/js/dashboard.serverPairForm.js"></script>
